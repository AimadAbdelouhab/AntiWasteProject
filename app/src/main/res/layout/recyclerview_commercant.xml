<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView_commercant"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:cardBackgroundColor="#F3F3F3"
    card_view:cardElevation="5dp"

    android:layout_margin="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            >

            <ImageView
                android:id="@+id/imageCommercant"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/boulangerie"
                />


            <View android:id="@+id/view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/image_shadow2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <TextView
                android:id="@+id/nombrePanierCommercant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="5 restants"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/favorie"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_heart"
                card_view:civ_border_color="@color/primaryTextColor"
                card_view:civ_border_width="1dp"


                >
            </de.hdodenhof.circleimageview.CircleImageView>

            </RelativeLayout>
        </FrameLayout>

        <View

            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/primaryTextColor"

            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titreCommercant"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:fontFamily="@font/rubik_medium"
                android:maxLines="2"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="Boulangerie Abdelouhab n la ville"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/categorieCommercant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Boulangerie"
                android:maxLines="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FF828591"
                android:textSize="12dp"
                android:gravity="center_horizontal"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"

                >

                <TextView
                    android:id="@+id/distanceCommercant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:fontFamily="@font/rubik"
                    android:text="Ã  250m"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#FF828591"
                    android:textSize="10dp"
                    android:gravity="center_horizontal"/>



            </LinearLayout>




        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>
