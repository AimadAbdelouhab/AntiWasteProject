<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/frame_layoutMain"
        />
    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navigationBar"
        app:mbn_circleColor="@color/white"
        app:mbn_selectedIconColor="@color/primaryTextColor"
        app:mbn_countTextColor="@color/white"
        app:mbn_countBackgroundColor="@color/black"
        app:mbn_defaultIconColor="@color/primaryTextColor"
        app:mbn_backgroundBottomColor="@color/white"
        app:mbn_shadowColor="#1f212121"
        app:mbn_rippleColor="#2f424242"
        />


</LinearLayout>