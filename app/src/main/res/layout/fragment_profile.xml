<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/greyBgColor">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon Profil"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/rubik_bold"
            android:layout_marginTop="18dp"
            android:textSize="24dp"
            android:textColor="@color/black"

            >
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primaryTextColor"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="25dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DÉTAILS DE MON COMPTE"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/rubik_light"
            android:layout_marginTop="18dp"
            android:textSize="14dp"
            android:textColor="@color/greyColor"
            android:layout_marginBottom="10dp"
            >
        </TextView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tvModifierInfoPerso"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/rubik_light"
                            android:text="MODIFIER  "
                            android:textColor="@color/black"
                            android:drawableRight="@drawable/ic_arrow"
                            android:textSize="14dp" />
                </RelativeLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom"
                    android:textSize="14dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/rubik_light"
                    android:textColor="@color/black"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tvNom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aimad Abdelouhab"
                            android:layout_marginRight="25dp"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="13dp"
                            android:textColor="@color/greyColor"
                            android:layout_alignParentRight="true"
                            >
                        </TextView>
                </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyColor" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="14dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/rubik_light"
                    android:textColor="@color/black"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="a.aimad1999@gmail.com"
                            android:layout_marginRight="25dp"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="13dp"
                            android:textColor="@color/greyColor"
                            android:layout_alignParentRight="true"
                            >
                        </TextView>
                </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyColor" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N° de Téléphone"
                    android:textSize="14dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/rubik_light"
                    android:textColor="@color/black"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tvTelphone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+33775436980"
                            android:layout_marginRight="25dp"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="13dp"
                            android:textColor="@color/greyColor"
                            android:layout_alignParentRight="true"
                            >
                        </TextView>
                </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PARAMÈTRES"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/rubik_light"
            android:layout_marginTop="40dp"
            android:textSize="14dp"
            android:textColor="@color/greyColor"
            android:layout_marginBottom="10dp"
            >
        </TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyColor" />
        <LinearLayout
            android:id="@+id/llModifierMotDePasse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modifier le mot de passe"
                    android:textSize="14dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/rubik_light"
                    android:textColor="@color/black"
                    android:paddingRight="25dp"
                    android:drawableRight="@drawable/ic_arrow"
                    />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyColor" />




       <!-- <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="40dp"
            android:background="@color/greyColor" />-->
        <LinearLayout
            android:id="@+id/llDeconnexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Déconnexion"
                    android:textSize="14dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/rubik_light"
                    android:textColor="#FF3535"
                    android:paddingRight="25dp"

                    />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyColor" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© Copyright Aziz Corp."

            android:fontFamily="@font/rubik_light"
            android:layout_marginTop="40dp"
            android:textSize="14dp"
            android:textColor="@color/greyColor"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            />



</LinearLayout>